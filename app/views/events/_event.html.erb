<div class="card">
  <div class="card-header">
    <%= link_to event.description, event_path(event) %>
    </div>
  <div class="card-body">
      <%= event.date %>
      <%= event.host.email %>
      <%= event.created_at.strftime('%d-%b-%Y') %>
      </div>
        <div class="text-right">
          <%= event.host.email %>
        </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-sm btn-warning' %>
        <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </div>
  </div>
<br>
<br>
